# Monitoring & Notification Services Configuration
# Add these to your .env file

# Queue Configuration
QUEUE_CONNECTION=database
# For production, you can use redis:
# QUEUE_CONNECTION=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ============================================
# API SERVICES FOR MONITORING
# ============================================

# OpenWeatherMap API (Weather Monitoring)
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Alpha Vantage (Stock Market Data)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Binance API (Optional - for crypto monitoring)
# Not required for public market data
BINANCE_API_KEY=
BINANCE_API_SECRET=

# CoinGecko API (Optional - for crypto monitoring)
# Free tier available without API key
COINGECKO_API_KEY=

# ============================================
# NOTIFICATION CHANNELS
# ============================================

# Email Configuration (using Laravel's mail settings)
# Already configured in main .env file
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=alerts@task.az
# MAIL_FROM_NAME="task.az"

# SMS Configuration - Twilio
# Get credentials from: https://console.twilio.com
TWILIO_SID=your_twilio_account_sid
TWILIO_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890  # Your Twilio phone number

# SMS Configuration - Nexmo/Vonage (Alternative)
NEXMO_KEY=your_nexmo_key
NEXMO_SECRET=your_nexmo_secret
NEXMO_FROM="task.az"

# SMS Configuration - Azercell (Local Azerbaijan Provider)
AZERCELL_API_URL=https://api.azercell.com/sms/send
AZERCELL_API_KEY=your_azercell_api_key

# Telegram Bot Configuration
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# WhatsApp Configuration - Twilio WhatsApp
# Use Twilio credentials above plus:
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886  # Twilio sandbox number

# WhatsApp Business API (Alternative)
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Slack App Configuration
# Create an app at: https://api.slack.com/apps
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Push Notifications - Web Push VAPID Keys
# Generate keys using: php artisan push:generate-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# ============================================
# MONITORING SETTINGS
# ============================================

# Default check frequencies (in seconds)
MONITOR_CRYPTO_FREQUENCY=60
MONITOR_WEATHER_FREQUENCY=600
MONITOR_WEBSITE_FREQUENCY=120
MONITOR_STOCK_FREQUENCY=60
MONITOR_CURRENCY_FREQUENCY=300

# Alert rate limiting (max alerts per hour per user)
ALERT_RATE_LIMIT=100

# ============================================
# DEVELOPMENT/TESTING
# ============================================

# Set to 'mock' to use mock data instead of real APIs
SMS_PROVIDER=mock  # Options: twilio, nexmo, azercell, mock
WEATHER_PROVIDER=mock  # Options: openweather, mock
CRYPTO_PROVIDER=mock  # Options: binance, coingecko, mock
STOCK_PROVIDER=mock  # Options: alpha_vantage, yahoo, mock

# Enable debug logging for monitoring
MONITOR_DEBUG=true

# Test mode - sends all notifications to admin email/phone
NOTIFICATION_TEST_MODE=false
NOTIFICATION_TEST_EMAIL=admin@task.az
NOTIFICATION_TEST_PHONE=+994501234567

# Mock verification code for local testing (6 digits)
MOCK_VERIFICATION_CODE=123456
VERIFICATION_MOCK_MODE=true  # Auto-enabled in local env